@using RangeManagementSystem.Web.Models
@model LoginViewModel

<style>
    .half-width {
        width: 50%;
    }
</style>

<h2 style="text-align:center">Вход</h2>
<div style="display:flex; justify-content: center; margin-top:50px">
    <div style="min-width: 400px">
        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
        {
            <div style="margin-bottom: 10px; display:flex">
                @Html.LabelFor(m => m.Username, new { @class = "half-width" })
                @Html.TextBoxFor(m => m.Username, new { @class = "half-width" })
                @Html.ValidationMessageFor(m => m.Username)
            </div>
            <div style="display:flex">
                @Html.LabelFor(m => m.Password, new { @class = "half-width" })
                @Html.PasswordFor(m => m.Password, new { @class = "half-width" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <div style="display:flex; justify-content: center">
                <button type="submit" class="btn btn-primary" style="margin-top: 20px; text-align: center;">Вход</button>
            </div>
            @if(Model != null && string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <span>@Model.ErrorMessage</span>
            }
        }
    </div>
</div>